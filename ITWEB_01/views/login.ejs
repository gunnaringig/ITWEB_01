<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <h2 class="page-header">Account Login</h2>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form method="post" action="/users/login">
                    <h5>Use a local account to log in.</h5>
                    <hr/>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name='username' placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name='password' placeholder="Password"> 
                    </div>
                    <hr />
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./users/forgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./users/register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>
</html>